<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="CustomButtonStyle">
        <!-- 크기 -->
        <!-- 배경색 및 모양 (shape로 분리됨) -->
        <item name="android:background">@drawable/bg_custom_button</item>
        <!-- 그림자(elevation) -->
        <item name="android:elevation">4dp</item>
