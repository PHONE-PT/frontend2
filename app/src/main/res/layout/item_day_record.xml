<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="16dp"
    android:layout_marginStart="8dp"
    android:layout_marginEnd="8dp">

    <!-- 요일별 운동 기록 카드 (보라색 상자) -->
    <!-- 배경으로 @drawable/routine_box 를 사용합니다. -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/routine_box"
        android:padding="20dp"
        android:elevation="2dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- 요일 제목 (예: 월요일) -->
        <TextView
            android:id="@+id/tv_day_of_week"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/text_dark_gray"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="10dp"
            tools:text="월요일"/>

        <!-- 개별 운동 항목을 담을 내부 RecyclerView (어댑터 뷰) -->
        <!-- 이 리사이클러 뷰는 item_exercise_detail.xml을 아이템으로 사용합니다. -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_view_exercise_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            android:nestedScrollingEnabled="false"
            tools:itemCount="2"
            tools:listitem="@layout/item_exercise_detail" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>